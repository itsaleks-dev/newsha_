{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,

    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@app/*": ["app/*"],
      "@shared/*": ["shared/*"],
      "@entities/*": ["entities/*"],
      "@features/*": ["features/*"],
      "@widgets/*": ["widgets/*"],
      "@pages/*": ["pages/*"],
      "@types/*": ["types/*"]
    },

    "types": ["vitest/globals"]
  },
  "include": ["src/**/*.test.ts", "src/**/*.test.tsx"]
}
